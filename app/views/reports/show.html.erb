<p id="notice"><%= notice %></p>

<h1>Payroll Report for Report Id <%= params[:report_id] %></h1>
 
<table>
  <tr>
    <th>Employee ID</th>
    <th>Pay Period</th>
    <th>Amount Paid</th>
  </tr>
 
<% @reports.each do |(key,value)| %>
  <tr>
    <td><%= key.to_s.split(":")[0] %></td>
    <td><%= key.to_s.split(":")[1] %></td>
    <td>$ <%= value %></td>
  </tr>
<% end %>
</table>
 
<br>

<%= link_to 'Back', reports_path %>
